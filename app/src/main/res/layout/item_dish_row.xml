<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_28dp">

    <TextView
        android:id="@+id/tvSpecialInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:paddingHorizontal="@dimen/dimen_8dp"
        android:paddingVertical="@dimen/dimen_2dp"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_25sp"
        app:layout_constraintBottom_toTopOf="@id/tvDishName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/tvDishName"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Must Try" />

    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginEnd="@dimen/dimen_8dp"
        android:contentDescription="@null"
        android:focusable="false"
        app:layout_constraintBottom_toTopOf="@id/tvRate"
        app:layout_constraintEnd_toStartOf="@id/tvDishName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSpecialInfo"
        tools:src="@drawable/ic_food" />

    <TextView
        android:id="@+id/tvDishName"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_8dp"
        android:textColor="@color/textColor"
        android:textSize="@dimen/dimen_25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/imgIcon"
        app:layout_constraintEnd_toStartOf="@id/btnDecrementQty"
        app:layout_constraintStart_toEndOf="@id/imgIcon"
        app:layout_constraintTop_toTopOf="@id/imgIcon"
        tools:text="Italian Spaghetti Exotic Veggie Pasta" />

    <TextView
        android:id="@+id/btnDecrementQty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dimen_8dp"
        android:text="@string/minus"
        android:textColor="@color/textColor"
        android:textSize="@dimen/dimen_25sp"
        app:layout_constraintBottom_toBottomOf="@id/imgIcon"
        app:layout_constraintEnd_toStartOf="@id/tvQuantity"
        app:layout_constraintStart_toEndOf="@id/tvDishName"
        app:layout_constraintTop_toTopOf="@id/imgIcon" />

    <TextView
        android:id="@+id/tvQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dimen_8dp"
        android:textColor="@color/textColor"
        android:textSize="@dimen/dimen_25sp"
        app:layout_constraintBottom_toBottomOf="@id/imgIcon"
        app:layout_constraintEnd_toStartOf="@id/btnIncrementQty"
        app:layout_constraintStart_toEndOf="@id/btnDecrementQty"
        app:layout_constraintTop_toTopOf="@id/imgIcon"
        tools:text="0" />

    <TextView
        android:id="@+id/btnIncrementQty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dimen_8dp"
        android:text="@string/plus"
        android:textColor="@color/textColor"
        android:textSize="@dimen/dimen_25sp"
        app:layout_constraintBottom_toBottomOf="@id/imgIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvQuantity"
        app:layout_constraintTop_toTopOf="@id/imgIcon" />

    <TextView
        android:id="@+id/tvRate"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:textColor="@color/textColor"
        android:textSize="@dimen/dimen_25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvDishName"
        app:layout_constraintTop_toBottomOf="@id/tvDishName"
        tools:text="$100" />
</androidx.constraintlayout.widget.ConstraintLayout>